<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Realtime Notifications</title>
	<script src="http://js.pusher.com/2.2/pusher.min.js" type="text/javascript"></script>
	<script src="https://code.jquery.com/jquery-2.1.3.min.js" type="text/javascript"></script>
	<link rel="stylesheet" href="">
</head>
<body>

	<ul class="notifications-list">
	</ul>
	
	<script>

	var pusher = new Pusher('feaf18a411d3cb9216ee');

	var notificationsChannel = pusher.subscribe('notifications');

	notificationsChannel.bind('notification', function(notification){
		var message = notification.message;
		var notificationHtml = "<li class='notification'>" + message + "</li>"
		$('ul.notifications-list').append(notificationHtml);
	});

	</script>

</body>
</html>